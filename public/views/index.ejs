<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>INICIO</title>
</head>
<body>

  <div class="container">
    <br>
<form action="/api/products/" method="get">
    <input type="submit" class="btn btn-primary" value="Get All Products">
</form>

<br>

<form method="get" id="getProductById">
    <input type="number"  name="id" id="id" oninput = "return getProductById(); false;">
    <input type="submit" class="btn btn-primary" value="Get Product by id">
</form>

<br>
<hr>
<h2>Agregar nuevo producto: </h2>
<br>
<form action="/api/products/" method="post">
    <label for="title">Title:</label>
    <input type="text"  name="title" id="title"><br><br>

    <label for="price">Price:</label>
    <input type="number" name="price" id="price"><br><br>

    <label for="thumbnail">Thumbnail:</label>
    <input type="url" name="thumbnail" id="thumbnail"><br><br>
    <input type="submit" class="btn btn-primary" value="Create">
</form>
<br>
<h2>Lista de productos: </h2>
</div>
   
    <table class="table table-dark table-hover">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">TITLE</th>
            <th scope="col">PRICE</th>
            <th scope="col">THUMBNAIL</th>
          </tr>
        </thead>
        <tbody>
            <% if (products.length > 0){ %>
            <% products.forEach(function(products){ %>
          <tr>
            <th scope="row"> <%= products.id %> </th>
            <td><%= products.title %> </td>
            <td> S/. <%= products.price %>  </td>
            <td> <img width="40px" src=" <%= products.thumbnail %> "/></td>
          </tr>
          <% }) %>
          <% }else { %>
            <tr>
                <th><%= 'No hay productos' %> </th>
            </tr>
        <% } %>   
        </tbody>
      </table>


      <script>
        function getProductById() {
            let id = document.getElementById('id').value ;
            let form = document.getElementById('getProductById');
            form.setAttribute('action', '/api/products/' + id);
        }

    </script>

</body>
</html>